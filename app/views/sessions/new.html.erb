<h1 id="login">Login to your Medical Account</h1>
    <%= form_tag '/login' do %>
    <div class="mb-3" style="width:511px;">
    <%= label_tag :email%>
    <%= text_field_tag :email, "", class: "form-control", placeholder: "email@example.com"%>
    </div>
    <div class="mb-3" style="width:511px;">
    <%= label_tag :password%>
    <%= password_field_tag :password, "", class: "form-control", placeholder: "password"%>
    </div>
    <div class="text-center">
        <%= submit_tag "Login", class: "btn btn-success", id: "login-button"%>
    </div>
    <br>
    <div class="text-center">
        <%= link_to "Sign Up", new_doctor_path, class: "btn btn-success", id: "login-button"%>
    </div>
<%end%>